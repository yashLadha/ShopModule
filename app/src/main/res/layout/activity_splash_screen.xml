<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e99024"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yashladha.shop.module.splashScreen">

    <TextView
        android:fontFamily="cursive"
        android:textColor="@color/colorAccent"
        android:text="Shop Module"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="36sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivSplashImage"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp" />

    <ImageView
        android:id="@+id/ivSplashImage"
        android:background="@mipmap/ic_launcher_round"
        android:elevation="6dp"
        android:layout_centerInParent="true"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <ProgressBar
        android:id="@+id/splash_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivSplashImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />

</RelativeLayout>
